<div class="row">
	<div class="col-xs-3"></div>
	<div class="col-xs-6">
		<h2>Editing Book</h2>

		<%= form_for(@book) do |f| %>
			<h4>Title</h4>
			<%= f.text_field :title, style: "width: 500px" %>

			<h4>Opinion</h4>
			<%= f.text_area :body, style: "width: 500px" %>

			<%= f.submit "Update Book", class: "btn btn-primary", style: "display: block; width: 500px; margin-top: 10px;" %>

		<% end %>
	</div>
	<div class="col-xs-3"></div>
</div>