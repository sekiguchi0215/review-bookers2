<div class="row">
	<div class="col-xs-3">
		<%= render "users/sidebar", user: current_user %>
	</div>
	<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table table-hover table-inverse">
			<tbody>
				<tr>
					<td><%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: "jpeg", fallback: "no_image.jpg" %></td>
					<td><%= @book.title %></td>
					<td><%= @book.body %></td>
					
				</tr>
			</tbody>
		</table>
	</div>
</div>