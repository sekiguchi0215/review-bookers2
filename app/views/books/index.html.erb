<div class="row">
	<div class="col-xs-3"></div>
	<div class="col-xs-9">
		<h2>Book</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
						<td><%= book.title %></td>
						<td><%= book.body %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>