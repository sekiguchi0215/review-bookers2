<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span style="color: white; font-size: 20px;"><strong>Bookers</strong></span>
        </nav>
        
        <nav>
          <ul class="nav navbar-nav navbar-right" style="list-style: none;">
            <% if user_signed_in? %>
              <li>
                <%= link_to user_path(current_user.id) do %>
                  <span class="glyphicon glyphicon-home"> Home</span>
                <% end %>
              </li>
              <li>
                <%= link_to users_path do %>
                  <span class="glyphicon glyphicon-user"> Users</span>
                <% end %>
              </li>
              <li>
                <%= link_to books_path do %>
                  <span class="glyphicon glyphicon-book"> Books</span>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path do %>
                  <span class="glyphicon glyphicon-log-out"> logout</span>
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to root_path do %>
                  <span class="glyphicon glyphicon-home"> Home</span>
                <% end %>
              </li>
              <li>
                <%= link_to about_path do %>
                  <span class="glyphicon glyphicon-link"> About</span>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_registration_path do %>
                  <span class="glyphicon glyphicon-edit"> sign up</span>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path do %>
                  <span class="glyphicon glyphicon-log-in"> login</span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </nav>

      </div>
    </header>
    <div class="container" style="margin-top: 50px;">
      <p id="notice"></p>
      <%= yield %>
    </div>
    
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
