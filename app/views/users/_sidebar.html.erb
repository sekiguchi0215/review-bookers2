<div class="col-xs-3">
	<h2>UserInfo</h2>
	<table class="table">
		<tbody>
			<tr>
				<%= attachment_image_tag user, :profile_image_id, :fill, 60, 60, fallback: "no_image.jpg" %>
			</tr>
			<tr>
				<th>name</th>
				<th><%= user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= user.introduction %></th>
			</tr>
		</tbody>
	</table>
	<div class="row">
		
	</div>
	<h2>New Book</h2>
	<%= form_for(@book) do |f| %>
		<h4>Title</h4>
		<%= f.text_field :title %>

		<h4>Opinion</h4>
		<%= f.text_area :body %>

		<%= f.submit "Create Book" %>
	<% end %>
</div>